parameters:
    level: 6
    paths:
        - Api/
        - tests/
    
    # Bootstrap file for autoloading
    bootstrapFiles:
        - tests/bootstrap.php
    
    # Exclude vendor and generated files
    excludePaths:
        - vendor/
        - coverage/
        - .phpunit.cache/
    
    # Ignore errors for mock classes that simulate Magento interfaces
    ignoreErrors:
        # Allow dynamic properties in mock classes
        - '#Access to an undefined property [a-zA-Z0-9\\_]+::\$[a-zA-Z0-9_]+#'
        # Allow calls to undefined methods in mock classes
        - '#Call to an undefined method [a-zA-Z0-9\\_]+::[a-zA-Z0-9_]+\(\)#'
        # Ignore missing Magento classes in test mocks
        - '#Class [a-zA-Z0-9\\_]+ not found#'
        # Allow PHPUnit test method naming and missing return types
        - '#Method [a-zA-Z0-9\\_]+Test::[a-zA-Z0-9_]+\(\) has no return type specified#'
        - '#has no type specified#'
        - '#has parameter .+ with no type specified#'
        # Ignore missing typehints for arrays and generics
        - identifier: missingType.iterableValue
        - identifier: missingType.generics
        # Ignore mock-related errors
        - '#Trying to mock an undefined method#'
        - '#on an unknown class#'
        - '#Access to undefined constant#'
        - '#Unable to resolve the template type T in call to method#'
        # Ignore test-specific patterns
        - '#Call to static method .+ on an unknown class#'
        - '#Property .+ has unknown class .+ as its type#'
        - '#Access to constant .+ on an unknown class#'
        - '#Negated boolean expression is always false#'
    
    # Memory limit for analysis
    memoryLimitFile: 1G